<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/splash_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_above="@+id/splash_holder_layout" />

    <TextView
        android:id="@+id/splash_jump"
        android:layout_width="60dp"
        android:layout_height="36dp"
        android:background="@drawable/round_transparent_60_bg"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/white_100"
        android:text="跳过"
        android:layout_alignParentRight="true"
        android:layout_margin="18dp"
        android:visibility="invisible"
        />

    <RelativeLayout
        android:id="@+id/splash_holder_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/splash_holder"
            android:layout_width="220dp"
            android:layout_height="80dp"
            android:scaleType="centerInside"
            android:layout_centerInParent="true"
            android:src="@drawable/icon_holder"/>
    </RelativeLayout>

</RelativeLayout>