<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/item_pay_content"
        android:background="#fff7f7f7"
        android:padding="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_pay_logo"
            android:layout_width="30.0dip"
            android:layout_height="30.0dip"
            android:layout_centerVertical="true" />
        <TextView
            android:id="@+id/item_pay_text"
            android:textSize="14.0sp"
            android:textColor="#ff000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:text="支付宝支付"
            android:layout_toRightOf="@+id/item_pay_logo"
            android:layout_centerVertical="true" />
        <com.tencent.newhb.grabings.widget.CustomCheckBox
            android:id="@+id/item_pay_checkbox"
            app:color_checked="@color/colorPrimary"
            android:clickable="false"
            android:duplicateParentState="true"
            android:layout_width="20.0dip"
            android:layout_height="20.0dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" />

    </RelativeLayout>
</LinearLayout>