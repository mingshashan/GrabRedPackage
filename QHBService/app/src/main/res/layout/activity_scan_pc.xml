<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="18sp"
        android:textColor="#ffff0000"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="在微信扫一扫界面按以下步骤\n从相册中选择第一个二维码图片" />
    <ImageView
        android:background="@drawable/scan_hint_bg"
        android:layout_width="216.0dip"
        android:layout_height="384.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_centerHorizontal="true" />
    <Button
        android:textSize="18.0sp"
        android:textColor="#ffffffff"
        android:id="@+id/pay_btn"
        android:background="@drawable/round_red_button_bg"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0dip"
        android:layout_marginTop="20.0dip"
        android:layout_marginRight="30.0dip"
        android:text="立即支付" />
    <Button
        android:textSize="18.0sp"
        android:textColor="#ffffffff"
        android:id="@+id/over_btn"
        android:background="@drawable/round_red_button_bg"
        android:paddingTop="10.0dip"
        android:paddingBottom="10.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30.0dip"
        android:layout_marginTop="10.0dip"
        android:layout_marginRight="30.0dip"
        android:text="已完成支付" />
</LinearLayout>