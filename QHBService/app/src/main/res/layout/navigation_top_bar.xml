<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_top_bar_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@color/colorPrimary">

    <ImageView
        android:id="@+id/navigation_top_bar_let_res"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/navigation_bar_arrow_back"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/navigation_top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white_100"
        android:textStyle="bold"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/navigation_top_bar_right_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white_100"
        android:textSize="14sp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/navigation_top_bar_right_res"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        />
</RelativeLayout>